#!/bin/sh
#/ Usage: bitrate [file...]

br() {
  b=$(mediainfo "$1" | egrep "Bit rate(\s+):" | cut -d: -f2-)
  echo "$1:$b"
}

[ -n "$1" ] || {
  grep "^#/" $0 | cut -c4- >&2
  exit 2
}

for x in "$@"; do
  if [ -d "$x" ]; then
    find "$x" -name '*.mp3' -maxdepth 1 | sort | while read -r y; do
      br "$y"
    done
  else
    br "$x"
  fi
done
