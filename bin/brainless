"""
Usage: brainless <dir> [<dir> ..]
"""
import os
import sys

import mutagen.id3


EXTENSIONS = ['.flac', '.mp3', '.m4a']
NEEDLE = 'musicbrainz'


def check_track(fn):
    try:
        track = mutagen.id3.ID3(fn)
    except mutagen.id3.error:
        return False

    for k in track.keys():
        if NEEDLE in k.lower():
            return True
    return False


def main(*dirs):
    for d in dirs:
        for root, _, files in os.walk(d):
            for f in files:
                if os.path.splitext(f)[-1] not in EXTENSIONS:
                    continue
                fn = os.path.join(root, f)
                has_brains = check_track(fn)
                if not has_brains:
                   sys.stdout.write("%s\n" % fn)


if __name__ == '__main__':
    if len(sys.argv) < 2:
        sys.stdout.write(__doc__.lstrip())
        sys.exit(1)

    main(*sys.argv[1:])
