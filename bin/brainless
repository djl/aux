"""
Usage: brainless <dir> [<dir> ..]
"""
import os
import sys

from mutagen import File


NEEDLE = 'musicbrainz'
EXTENSIONS = ['.flac', '.mp3', '.m4a', '.mp4']


def echo(msg=''):
    sys.stdout.write(msg + '\n')
    sys.stdout.flush()


def check_track(fn):
    track = File(fn)
    for k in track.keys():
        if NEEDLE in k.lower():
            return True
    return False


def main(*dirs):
    for d in dirs:
        for root, _, files in os.walk(d):
            for f in files:
                ext = os.path.splitext(f)[-1].lower()
                if ext not in EXTENSIONS:
                    continue
                track = File(os.path.join(root, f))
                for k in track.keys():
                    if NEEDLE in k.lower():
                        echo(track.filename)


if __name__ == '__main__':
    if len(sys.argv) < 2:
        echo(__doc__.strip())
        sys.exit(1)

    main(*sys.argv[1:])
